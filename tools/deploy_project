#!/bin/bash

PROJECT_NAME=$1
PORT=$2
DOMAIN=$3
DB_NAME=$4
DB_USER=$5
DB_PASSWORD=$6
DB_IP=$7
PROJECT_PATH=${8:-"/var/www"}

if [ "$#" -lt 7 ] || [ "$#" -gt 8 ]; then
    echo "Usage: deploy_project <project_name> <port> <domain> <db_name> <db_user> <db_password> <db_ip> [project_path]"
    echo "project_path est optionnel, par dÃ©faut: /var/www"
    exit 1
fi

create_pg_db "$DB_NAME" "$DB_USER" "$DB_PASSWORD" "$DB_IP"
create_nginx_conf "$PROJECT_NAME" "$PORT" "$DOMAIN" "$PROJECT_PATH"
systemctl reload nginx

echo "ðŸŽ‰ DÃ©ploiement du projet $PROJECT_NAME terminÃ© dans $PROJECT_PATH/$PROJECT_NAME."
